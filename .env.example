# =================================
# Property Helper 2025 - Environment Configuration
# =================================
# Copy this file to .env.local for development
# Copy this file to .env.production for production

# Application Environment
NODE_ENV=development
APP_NAME="Property Helper 2025"
APP_VERSION=1.0.0
APP_URL=http://localhost:3000

# Database Configuration
DB_URL=postgresql://property_helper_user:property_helper_password@localhost:5432/property_helper_2025
DB_HOST=localhost
DB_PORT=5432
DB_NAME=property_helper_2025
DB_USER=property_helper_user
DB_PASSWORD=property_helper_password
DB_SSL=false

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# API Configuration
API_PORT=3001
API_PREFIX=api
CORS_ORIGIN=http://localhost:3000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/gif,application/pdf
UPLOAD_PATH=./uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@propertyhelper2025.com

# Payment Configuration (Optional)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Analytics & Monitoring (Optional)
GOOGLE_ANALYTICS_ID=GA_...
SENTRY_DSN=

# Third-party Integrations (Optional)
PROPERTY24_API_KEY=your-property24-api-key
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_VERIFY_TOKEN=your-verify-token

# Development Settings
DEBUG=true
LOG_LEVEL=info

# Docker Configuration
COMPOSE_PROJECT_NAME=property-helper-2025
DOCKER_ENV=development