# =================================
# Property Helper 2025 - Production Environment
# =================================

# Application Environment
NODE_ENV=production
APP_NAME="Property Helper 2025"
APP_VERSION=1.0.0
APP_URL=https://your-domain.com

# Database Configuration
DB_URL=postgresql://property_helper_user:${DB_PASSWORD}@postgres:5432/property_helper_2025
DB_HOST=postgres
DB_PORT=5432
DB_NAME=property_helper_2025
DB_USER=property_helper_user
DB_PASSWORD=${DB_PASSWORD}
DB_SSL=true

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# Authentication & Security
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# API Configuration
API_PORT=3001
API_PREFIX=api
CORS_ORIGIN=https://your-domain.com

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://your-domain.com/api
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_APP_ENV=production

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/gif,application/pdf
UPLOAD_PATH=./uploads

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
SMTP_FROM=noreply@your-domain.com

# Payment Configuration
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}
SENTRY_DSN=${SENTRY_DSN}
NEXT_PUBLIC_SENTRY_DSN=${NEXT_PUBLIC_SENTRY_DSN}
LOG_LEVEL=warn
ENABLE_PERFORMANCE_MONITORING=true

# Monitoring & Alerting
PROMETHEUS_METRICS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=${GRAFANA_ADMIN_PASSWORD}
ALERT_WEBHOOK_URL=${ALERT_WEBHOOK_URL}

# Third-party Integrations
PROPERTY24_API_KEY=${PROPERTY24_API_KEY}
WHATSAPP_API_KEY=${WHATSAPP_API_KEY}
WHATSAPP_VERIFY_TOKEN=${WHATSAPP_VERIFY_TOKEN}

# Production Settings
DEBUG=false
LOG_LEVEL=warn

# Docker Configuration
COMPOSE_PROJECT_NAME=property-helper-2025-prod
DOCKER_ENV=production